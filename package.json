{
  "name": "qt-debug-tools",
  "displayName": "Qt Debug Tools",
  "description": "",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.101.0"
  },
  "publisher": "david.kanekanian",
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "qt-debug-tools.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "qt-debug-tools.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      }
    ],
    "views": {
      "debug": [
        {
          "id": "qt-debug-tools.widgets",
          "name": "Widgets",
          "contextualTitle": "Widgets",
          "icon": "./res/icons/widgets_24dp_E3E3E3_FILL0_wght400_GRAD0_opsz24.svg"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "qt-debug-tools.refresh",
          "when": "view == qt-debug-tools.widgets",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.101.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "ts-loader": "^9.5.2",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
